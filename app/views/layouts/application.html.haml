!!!
%html
	%head
		%meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
		%title YiellohFrontend
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
	%body
		%header.container
			%nav{ :class => "navbar navbar-default" }
				.container-fluid
					.navbar-header
						%button{ :type => "button", :class => "navbar-toggle collapsed", data: { :toggle => "collapse", :target => "#bs-example-navbar-collapse-1" }}
							%span.sr-only
								= "Toggle navigation"
							%span.icon-bar
							%span.icon-bar
							%span.icon-bar
						= link_to "Brand", '#', class: "navbar-brand"
					.collapse.navbar-collapse{ :id => "bs-example-navbar-collapse-1" }
						%ul.nav.navbar-nav
							%li= link_to 'Link', '#'
						%form{ :class => "navbar-form navbar-left", :role => "search"}
							.form-group
								%input{ :type => "text", :class => "form-control", :placeholder => "Search..." }
								%button{ :type => "submit", :class => "btn btn-default" }
									= "Submit"
						%ul.nav.navbar-nav.navbar-right
							%li.dropdown
								= link_to '#', class: "dropdown-toggle", data: { toggle: 'dropdown'}, role: 'button' do
									= "Dropdown"
									%span.caret
								%ul.dropdown-menu
									%li= link_to 'Action', '#'
									%li= link_to 'Other Action', '#'
		.container
			= yield
